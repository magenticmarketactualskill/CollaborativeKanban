{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Suggestions",
  "description": "Schema for card improvement suggestions LLM response",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "description": "Type of suggestion",
        "enum": ["add_field", "improve_title", "add_subtask", "general"]
      },
      "field": {
        "type": "string",
        "description": "Field name for add_field suggestions"
      },
      "suggestion": {
        "type": "string",
        "description": "The suggestion content",
        "minLength": 1,
        "maxLength": 1000
      }
    },
    "required": ["type", "suggestion"],
    "additionalProperties": false
  },
  "minItems": 1,
  "maxItems": 5
}
