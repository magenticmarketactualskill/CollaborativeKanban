<%= form_with model: board, class: "space-y-6" do |f| %>
  <% if board.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were <%= pluralize(board.errors.count, "error") %>:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% board.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= f.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3" %>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= f.text_area :description, rows: 3, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3" %>
    </div>
  </div>

  <div>
    <%= f.label :level, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= f.select :level, Board::LEVELS.map { |l| [l.titleize, l] }, {}, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3" %>
    </div>
    <p class="mt-2 text-sm text-gray-500">
      <strong>Personal:</strong> For individual tasks.
      <strong>Team:</strong> For your immediate team.
      <strong>Group:</strong> For cross-team projects.
      <strong>Enterprise:</strong> For organization-wide initiatives.
    </p>
  </div>

  <div class="flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", board.persisted? ? board : boards_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    <%= f.submit board.persisted? ? "Update Board" : "Create Board", class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer" %>
  </div>
<% end %>
