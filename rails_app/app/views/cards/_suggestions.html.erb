<div id="card-<%= card.id %>-suggestions" class="space-y-2">
  <% if suggestions.any? %>
    <h4 class="text-sm font-medium text-gray-700">AI Suggestions</h4>

    <% suggestions.each do |suggestion| %>
      <div id="<%= dom_id(suggestion) %>" class="p-3 bg-yellow-50 rounded-lg border border-yellow-200">
        <div class="flex items-start justify-between gap-2">
          <div class="flex-1">
            <span class="inline-flex items-center rounded px-1.5 py-0.5 text-xs font-medium bg-yellow-100 text-yellow-800 mb-1">
              <%= suggestion.suggestion_type.humanize %>
            </span>
            <p class="text-sm text-yellow-900"><%= suggestion.content %></p>
            <% if suggestion.field_name.present? %>
              <p class="text-xs text-yellow-600 mt-1">Field: <%= suggestion.field_name %></p>
            <% end %>
          </div>

          <div class="flex gap-1">
            <%= button_to accept_board_card_ai_suggestion_path(card.board, card, suggestion),
                method: :post,
                class: "p-1 text-green-600 hover:bg-green-100 rounded",
                data: { turbo_method: :post },
                title: "Accept" do %>
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            <% end %>

            <%= button_to dismiss_board_card_ai_suggestion_path(card.board, card, suggestion),
                method: :delete,
                class: "p-1 text-red-600 hover:bg-red-100 rounded",
                data: { turbo_method: :delete },
                title: "Dismiss" do %>
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-sm text-gray-500">No suggestions available</p>
  <% end %>
</div>
