<%= form_with model: llm_configuration, class: "space-y-6" do |f| %>
  <% if llm_configuration.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were <%= pluralize(llm_configuration.errors.count, "error") %>:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% llm_configuration.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= f.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3", placeholder: "e.g., Production Claude" %>
      </div>
    </div>

    <div>
      <%= f.label :provider_type, "Provider", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.select :provider_type, LlmConfiguration::PROVIDER_TYPES.map { |p| [p.titleize, p] }, {}, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3", id: "provider_type_select" %>
      </div>
    </div>
  </div>

  <div>
    <%= f.label :model, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= f.text_field :model, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3", placeholder: "e.g., claude-3-5-sonnet-20241022" %>
    </div>
    <p class="mt-2 text-sm text-gray-500" id="model_hint">
      <strong>OpenAI:</strong> gpt-4o, gpt-4o-mini, gpt-4-turbo |
      <strong>Anthropic:</strong> claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022 |
      <strong>Ollama:</strong> llama3.2, mistral, codellama
    </p>
  </div>

  <div>
    <%= f.label :endpoint, "API Endpoint (optional)", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= f.text_field :endpoint, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3", placeholder: "Leave blank to use provider default" %>
    </div>
    <p class="mt-2 text-sm text-gray-500">Override the default API endpoint. Useful for proxies or self-hosted instances.</p>
  </div>

  <div>
    <%= f.label :api_key, "API Key", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= f.password_field :api_key, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3", placeholder: llm_configuration.persisted? ? "Leave blank to keep existing key" : "Enter API key" %>
    </div>
    <p class="mt-2 text-sm text-gray-500">Not required for local Ollama instances without authentication.</p>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
    <div>
      <%= f.label :priority, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.number_field :priority, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3", min: 0, max: 100 %>
      </div>
      <p class="mt-2 text-sm text-gray-500">Higher priority configs are preferred.</p>
    </div>

    <div class="flex items-center gap-x-3 pt-8">
      <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" %>
      <%= f.label :active, "Active", class: "block text-sm font-medium leading-6 text-gray-900 ml-2" %>
    </div>

    <div class="flex items-center gap-x-3 pt-8">
      <%= f.check_box :default_for_type, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" %>
      <%= f.label :default_for_type, "Default for Provider", class: "block text-sm font-medium leading-6 text-gray-900 ml-2" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
    <div>
      <%= f.label :cost_per_input_token, "Cost per Input Token ($)", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.number_field :cost_per_input_token, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3", step: "0.0000000001", min: 0, placeholder: "e.g., 0.000003" %>
      </div>
      <p class="mt-2 text-sm text-gray-500">Cost in USD per input token.</p>
    </div>

    <div>
      <%= f.label :cost_per_output_token, "Cost per Output Token ($)", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.number_field :cost_per_output_token, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3", step: "0.0000000001", min: 0, placeholder: "e.g., 0.000015" %>
      </div>
      <p class="mt-2 text-sm text-gray-500">Cost in USD per output token.</p>
    </div>

    <div>
      <%= f.label :speed_rating, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.select :speed_rating, [["Fast", "fast"], ["Medium", "medium"], ["Slow", "slow"]], { include_blank: "Select speed rating" }, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3" %>
      </div>
      <p class="mt-2 text-sm text-gray-500">Relative response speed.</p>
    </div>
  </div>

  <div class="flex items-center justify-end gap-x-6 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", llm_configurations_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    <%= f.submit llm_configuration.persisted? ? "Update Configuration" : "Create Configuration", class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer" %>
  </div>
<% end %>
