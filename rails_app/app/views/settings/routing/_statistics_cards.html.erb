<!-- LLM Calls Today -->
<div class="overflow-hidden rounded-lg bg-white shadow">
  <div class="p-5">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </div>
      <div class="ml-5 w-0 flex-1">
        <dl>
          <dt class="text-sm font-medium text-gray-500 truncate">LLM Calls (24h)</dt>
          <dd class="flex items-baseline">
            <div class="text-2xl font-semibold text-gray-900"><%= statistics[:llm][:total] %></div>
            <div class="ml-2 flex items-baseline text-sm font-semibold <%= statistics[:llm][:success_rate] >= 90 ? 'text-green-600' : statistics[:llm][:success_rate] >= 70 ? 'text-yellow-600' : 'text-red-600' %>">
              <%= statistics[:llm][:success_rate] %>%
            </div>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>

