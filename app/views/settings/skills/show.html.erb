<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="mb-8 flex items-start justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @skill.name %></h1>
      <p class="mt-1 text-sm text-gray-500 font-mono"><%= @skill.slug %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to export_settings_skill_path(@skill), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        Export
      <% end %>
      <%= link_to edit_settings_skill_path(@skill), class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
    </div>
  </div>

  <div class="space-y-6">
    <!-- Metadata -->
    <div class="bg-white shadow rounded-lg p-6">
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Version</dt>
          <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @skill.version %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Category</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @skill.category&.titleize || 'None' %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1">
            <% if @skill.enabled? %>
              <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">Enabled</span>
            <% else %>
              <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">Disabled</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Source</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @skill.source&.titleize || 'Unknown' %></dd>
        </div>
      </div>

      <% if @skill.description.present? %>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @skill.description %></dd>
        </div>
      <% end %>
    </div>

    <!-- Parameters -->
    <% if @skill.parameters.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Parameters (<%= @skill.parameters.size %>)</h3>
        <div class="overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Required</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Default</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @skill.parameters.each do |param| %>
                <tr>
                  <td class="px-4 py-3 text-sm font-mono text-gray-900"><%= param['name'] %></td>
                  <td class="px-4 py-3 text-sm text-gray-500"><%= param['type'] || 'string' %></td>
                  <td class="px-4 py-3 text-sm">
                    <% if param['required'] %>
                      <span class="text-red-600">Yes</span>
                    <% else %>
                      <span class="text-gray-400">No</span>
                    <% end %>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-500 font-mono"><%= param['default'] || '-' %></td>
                  <td class="px-4 py-3 text-sm text-gray-500"><%= param['description'] || '-' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>

    <!-- Prompt Template -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Prompt Template</h3>
      <pre class="bg-gray-50 rounded-lg p-4 text-sm font-mono text-gray-800 overflow-x-auto whitespace-pre-wrap"><%= @skill.prompt_template %></pre>
    </div>

    <!-- Workflow Steps -->
    <% if @skill.workflow_steps.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Workflow Steps (<%= @skill.workflow_steps.size %>)</h3>
        <ol class="space-y-3">
          <% @skill.workflow_steps.each_with_index do |step, i| %>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center text-sm font-medium"><%= i + 1 %></span>
              <div>
                <span class="inline-flex items-center rounded-md bg-gray-100 px-2 py-1 text-xs font-medium text-gray-700"><%= step['type'] %></span>
                <% if step['output_key'] %>
                  <span class="ml-2 text-sm text-gray-500">-> <%= step['output_key'] %></span>
                <% end %>
              </div>
            </li>
          <% end %>
        </ol>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <%= link_to "&larr; Back to Skills".html_safe, settings_skills_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
  </div>
</div>
