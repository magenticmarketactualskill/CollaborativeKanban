<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Skills</h1>
      <p class="mt-2 text-sm text-gray-700">Manage reusable prompts and workflows for LLM operations.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 flex gap-3">
      <!-- Import Button -->
      <%= form_with url: import_settings_skills_path, method: :post, multipart: true, class: "inline-flex" do %>
        <input type="file" name="file" accept=".md" class="hidden" id="skill-import-file" onchange="this.form.submit()">
        <label for="skill-import-file" class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 cursor-pointer">
          <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
          </svg>
          Import
        </label>
      <% end %>

      <%= link_to export_all_settings_skills_path, class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        Export All
      <% end %>

      <%= link_to new_settings_skill_path, class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
        </svg>
        Create Skill
      <% end %>
    </div>
  </div>

  <!-- Category Tabs -->
  <div class="mt-6 border-b border-gray-200">
    <nav class="-mb-px flex space-x-8">
      <%= link_to settings_skills_path, class: "#{params[:category].blank? ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium" do %>
        All
        <span class="ml-2 rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600"><%= Skill.for_user(current_user).count %></span>
      <% end %>
      <% @categories.each do |cat| %>
        <%= link_to settings_skills_path(category: cat), class: "#{params[:category] == cat ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium" do %>
          <%= cat.titleize %>
          <span class="ml-2 rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600"><%= Skill.for_user(current_user).by_category(cat).count %></span>
        <% end %>
      <% end %>
    </nav>
  </div>

  <% if @skills.empty? %>
    <div class="mt-10 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">No skills</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a skill or importing one.</p>
      <div class="mt-6 flex justify-center gap-3">
        <%= form_with url: import_settings_skills_path, method: :post, multipart: true, class: "inline-flex" do %>
          <input type="file" name="file" accept=".md" class="hidden" id="skill-import-empty" onchange="this.form.submit()">
          <label for="skill-import-empty" class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 cursor-pointer">
            Import Skill
          </label>
        <% end %>
        <%= link_to new_settings_skill_path, class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" do %>
          Create Skill
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Skills Grid -->
    <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @skills.each do |skill| %>
        <div class="relative flex flex-col rounded-lg border border-gray-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-medium text-gray-900 truncate"><%= skill.name %></h3>
              <p class="mt-1 text-sm text-gray-500 font-mono"><%= skill.slug %></p>
            </div>
            <div class="flex-shrink-0 ml-4">
              <% if skill.system_skill? %>
                <span class="inline-flex items-center rounded-md bg-purple-100 px-2 py-1 text-xs font-medium text-purple-700">System</span>
              <% end %>
              <% if skill.category.present? %>
                <span class="inline-flex items-center rounded-md bg-blue-100 px-2 py-1 text-xs font-medium text-blue-700"><%= skill.category.titleize %></span>
              <% end %>
            </div>
          </div>

          <% if skill.description.present? %>
            <p class="mt-3 text-sm text-gray-600 line-clamp-2"><%= skill.description %></p>
          <% end %>

          <% if skill.parameters.present? %>
            <div class="mt-3">
              <p class="text-xs text-gray-500">
                <%= skill.parameters.size %> parameter<%= skill.parameters.size == 1 ? '' : 's' %>:
                <%= skill.parameter_names.first(3).join(', ') %><%= skill.parameters.size > 3 ? '...' : '' %>
              </p>
            </div>
          <% end %>

          <div class="mt-4 flex items-center justify-between pt-4 border-t border-gray-100">
            <div class="text-xs text-gray-400">v<%= skill.version %></div>
            <div class="flex items-center gap-2">
              <%= link_to export_settings_skill_path(skill), class: "text-gray-400 hover:text-gray-600", title: "Export" do %>
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              <% end %>
              <%= link_to settings_skill_path(skill), class: "text-gray-400 hover:text-gray-600", title: "View" do %>
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              <% end %>
              <%= link_to edit_settings_skill_path(skill), class: "text-blue-600 hover:text-blue-900", title: "Edit" do %>
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              <% end %>
              <% unless skill.system_skill? %>
                <%= button_to skill, method: :delete, class: "text-red-600 hover:text-red-900", form: { data: { turbo_confirm: "Are you sure you want to delete this skill?" }, class: "inline" }, title: "Delete" do %>
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
