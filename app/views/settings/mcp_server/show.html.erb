<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">MCP Server Configuration</h1>
    <p class="mt-2 text-sm text-gray-600">
      Configure the Model Context Protocol server to expose tools and resources to external clients.
    </p>
  </div>

  <%= form_with model: @configuration, url: settings_mcp_server_path, method: :patch, class: "space-y-8" do |f| %>
    <!-- Enable/Disable -->
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-lg font-medium text-gray-900">Server Status</h3>
          <p class="text-sm text-gray-500">Enable or disable the MCP server</p>
        </div>
        <label class="relative inline-flex items-center cursor-pointer">
          <%= f.check_box :enabled, class: "sr-only peer" %>
          <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
        </label>
      </div>
    </div>

    <!-- Connection Settings -->
    <div class="bg-white shadow rounded-lg p-6 space-y-4">
      <h3 class="text-lg font-medium text-gray-900">Connection Settings</h3>

      <div>
        <%= f.label :port, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :port, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        <p class="mt-1 text-xs text-gray-500">WebSocket port for MCP connections (default: 3100)</p>
      </div>

      <div>
        <%= f.label :auth_type, "Authentication", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :auth_type, McpServerConfiguration::AUTH_TYPES.map { |t| [t.titleize, t] },
            {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", data: { action: "change->mcp-server#toggleTokenField" } %>
      </div>

      <div id="token-field" class="<%= 'hidden' unless @configuration.auth_type == 'token' %>">
        <%= f.label :auth_token, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :auth_token, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm font-mono" %>
        <p class="mt-1 text-xs text-gray-500">Token required for client authentication</p>
      </div>
    </div>

    <!-- Available Tools -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Available Tools (<%= @available_tools.size %>)</h3>
      <p class="text-sm text-gray-500 mb-4">These tools will be exposed to MCP clients.</p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @available_tools.each do |tool| %>
          <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <div class="font-medium text-gray-900 font-mono text-sm"><%= tool.name %></div>
              <div class="text-xs text-gray-500 mt-1"><%= tool.description %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Connection Info -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <h4 class="text-sm font-medium text-blue-900">Connection Information</h4>
      <p class="mt-1 text-sm text-blue-700">
        Connect to this MCP server using WebSocket at:
        <code class="bg-blue-100 px-2 py-1 rounded font-mono text-xs">ws://localhost:<%= @configuration.port || 3100 %>/cable</code>
      </p>
      <p class="mt-2 text-xs text-blue-600">
        Subscribe to the <code class="bg-blue-100 px-1 rounded">McpServerChannel</code> to start using MCP tools.
      </p>
    </div>

    <!-- Actions -->
    <div class="flex justify-between">
      <button type="button" onclick="testMcpServer()" class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
        <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        Test Server
      </button>
      <%= f.submit "Save Configuration", class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
    </div>
  <% end %>
</div>

<div id="test-result-modal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-medium text-gray-900">Server Test</h3>
      <button type="button" onclick="closeTestModal()" class="text-gray-400 hover:text-gray-500">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div id="test-result-content"></div>
  </div>
</div>

<script>
  async function testMcpServer() {
    const modal = document.getElementById('test-result-modal');
    const content = document.getElementById('test-result-content');

    content.innerHTML = '<div class="flex items-center"><svg class="animate-spin h-5 w-5 mr-3 text-blue-600" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Testing server...</div>';
    modal.classList.remove('hidden');

    try {
      const response = await fetch('/settings/mcp_server/test_connection', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        }
      });

      const result = await response.json();

      if (result.success) {
        content.innerHTML = `
          <div class="flex items-center text-green-600 mb-2">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            ${result.message}
          </div>
          <div class="text-sm text-gray-600">
            <div>Tools: ${result.tools_count}</div>
            <div>Resources: ${result.resources_count}</div>
          </div>
        `;
      } else {
        content.innerHTML = `<div class="flex items-center text-red-600"><svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>${result.message}</div>`;
      }
    } catch (error) {
      content.innerHTML = `<div class="text-red-600">Error: ${error.message}</div>`;
    }
  }

  function closeTestModal() {
    document.getElementById('test-result-modal').classList.add('hidden');
  }

  // Toggle token field visibility
  document.querySelector('select[name="mcp_server_configuration[auth_type]"]')?.addEventListener('change', function() {
    const tokenField = document.getElementById('token-field');
    if (this.value === 'token') {
      tokenField.classList.remove('hidden');
    } else {
      tokenField.classList.add('hidden');
    }
  });
</script>
