<%# Card relationships section
    Accepts: card (required), board (required) %>
<%= turbo_stream_from "card_#{card.id}_relationships" %>

<div id="card-<%= card.id %>-relationships" class="space-y-4">
  <div class="flex items-center justify-between">
    <h4 class="text-sm font-medium text-gray-700 flex items-center gap-2">
      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
      </svg>
      Relationships
    </h4>
    <% if board.user_can_edit?(current_user) %>
      <%= button_to detect_board_card_card_relationships_path(board, card),
          method: :post,
          class: "text-xs text-purple-600 hover:text-purple-800 flex items-center gap-1",
          data: { turbo_method: :post } do %>
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        Detect with AI
      <% end %>
    <% end %>
  </div>

  <% if card.blocked_by.any? %>
    <div class="rounded-md bg-red-50 p-3">
      <h5 class="text-xs font-medium text-red-800 mb-2 flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
        </svg>
        Blocked by
      </h5>
      <div class="space-y-1">
        <% card.blocked_by.each do |blocker| %>
          <%= render partial: 'cards/relationship_card', locals: { related_card: blocker, card: card, board: board, relationship_type: 'blocked_by' } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if card.blocks.any? %>
    <div class="rounded-md bg-orange-50 p-3">
      <h5 class="text-xs font-medium text-orange-800 mb-2 flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        Blocks
      </h5>
      <div class="space-y-1">
        <% card.blocks.each do |blocked| %>
          <%= render partial: 'cards/relationship_card', locals: { related_card: blocked, card: card, board: board, relationship_type: 'blocks' } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if card.depends_on.any? %>
    <div class="rounded-md bg-yellow-50 p-3">
      <h5 class="text-xs font-medium text-yellow-800 mb-2 flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Depends on
      </h5>
      <div class="space-y-1">
        <% card.depends_on.each do |dependency| %>
          <%= render partial: 'cards/relationship_card', locals: { related_card: dependency, card: card, board: board, relationship_type: 'depends_on' } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if card.dependencies.any? %>
    <div class="rounded-md bg-green-50 p-3">
      <h5 class="text-xs font-medium text-green-800 mb-2 flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Required by
      </h5>
      <div class="space-y-1">
        <% card.dependencies.each do |dependent| %>
          <%= render partial: 'cards/relationship_card', locals: { related_card: dependent, card: card, board: board, relationship_type: 'dependency_of' } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if card.related_cards.any? %>
    <div class="rounded-md bg-blue-50 p-3">
      <h5 class="text-xs font-medium text-blue-800 mb-2 flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
        </svg>
        Related
      </h5>
      <div class="space-y-1">
        <% card.related_cards.each do |related| %>
          <%= render partial: 'cards/relationship_card', locals: { related_card: related, card: card, board: board, relationship_type: 'related_to' } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% unless card.all_relationships.any? %>
    <p class="text-sm text-gray-500 text-center py-2">No relationships defined</p>
  <% end %>

  <!-- AI Relationship Suggestions -->
  <div id="card-<%= card.id %>-relationship-suggestions">
    <% relationship_suggestions = card.ai_suggestions.pending.where(suggestion_type: 'add_relationship') %>
    <% if relationship_suggestions.any? %>
      <%= render partial: 'cards/relationship_suggestions', locals: { card: card, suggestions: relationship_suggestions } %>
    <% end %>
  </div>
</div>
