<div id="card-<%= card.id %>-suggestions" class="space-y-2 fade-in">
  <% if suggestions.any? %>
    <div class="flex items-center gap-2 mb-2">
      <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
      <h4 class="text-sm font-medium text-yellow-900">AI Suggestions Ready</h4>
      <span class="text-xs text-yellow-600 bg-yellow-100 px-2 py-0.5 rounded-full"><%= suggestions.count %></span>
    </div>

    <div class="space-y-2 stagger-fade-in">
      <% suggestions.each do |suggestion| %>
        <div id="<%= dom_id(suggestion) %>" class="p-3 bg-yellow-50 rounded-lg border border-yellow-200 transition-all duration-200 hover:shadow-sm">
          <div class="flex items-start justify-between gap-2">
            <div class="flex-1">
              <span class="inline-flex items-center rounded px-1.5 py-0.5 text-xs font-medium bg-yellow-100 text-yellow-800 mb-1">
                <%= suggestion.suggestion_type.humanize %>
              </span>
              <p class="text-sm text-yellow-900"><%= suggestion.content %></p>
              <% if suggestion.field_name.present? %>
                <p class="text-xs text-yellow-600 mt-1">Field: <%= suggestion.field_name %></p>
              <% end %>
            </div>

            <div class="flex gap-1">
              <%= button_to accept_board_card_ai_suggestion_path(card.board, card, suggestion),
                  method: :post,
                  class: "p-1.5 text-green-600 hover:bg-green-100 rounded transition-colors",
                  data: { turbo_method: :post },
                  title: "Accept suggestion" do %>
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              <% end %>

              <%= button_to dismiss_board_card_ai_suggestion_path(card.board, card, suggestion),
                  method: :delete,
                  class: "p-1.5 text-red-600 hover:bg-red-100 rounded transition-colors",
                  data: { turbo_method: :delete },
                  title: "Dismiss suggestion" do %>
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-4">
      <svg class="w-8 h-8 text-gray-300 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
      <p class="text-sm text-gray-500">No suggestions available</p>
    </div>
  <% end %>
</div>
